{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "outDir": "out",
    "lib": ["ES2017"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true  // Add this to skip checking node_modules libraries
  },
  "include": ["src", "src/debuggerIntegration/debuggerIntegration.ts"],
  "exclude": ["node_modules", ".vscode-test"]
}